
<h1>Welcome to the Movie Club</h1>

<h4>Latest Movies Added</h4>

<ul>
<% @recently_added.each do |m| %>
  <p><%= link_to m.name, movie_path(m.id) %></p>
<%end%>
</ul>

<br><br>


<!--add new movie-->
  <h4>
  <% if @current_user.present? %>

    <%= link_to "Add New Movie", new_movie_path %>
  <% end %>

  <% if @movie.errors %>
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <%end%>
    </ul>
  </h4>
  <%end%>
    <% unless @current_user.present? %>
  <p>Please <%= link_to "Login", login_path, class: "item" %> to add new movie</p>
    <% end %>
<div id=blurbtext >
<h4>All Movies</h4>
<%= will_paginate @movies %>
<p>
<% @movies.each do |m| %>
  <p><%= link_to m.name, movie_path(m.id) %></p>
<%end%>
</p>
</div>
