<h3>Sign Up</h3>
<%= form_for @user do |f| %>
  <%= render partial: "includes/form_errors", locals: {form: f} %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Signup" %>
  </p>
<%end%>
